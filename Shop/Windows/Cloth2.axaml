<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Shop.Cloth2"
        Title="Cloth2"
        MaxHeight="800"
        MinHeight="800"
        MaxWidth="1280"
        MinWidth="1280"
        WindowStartupLocation="CenterScreen"
        x:CompileBindings="False">
        <!--Фон-->
        <Window.Background>
                <ImageBrush Source="/Assets/view10.jpg"/>
        </Window.Background>
        <!---->
        <StackPanel>
                <StackPanel
                        Orientation="Horizontal"
                        Margin="10,10,20,40">
                        <!--Наименование-->
                        <TextBlock 
                                Foreground="Ivory"
                                FontWeight="Medium"
                                FontSize="30"
                                Margin="10"
                                Text="Одежда">
                        </TextBlock>
                        <!--Кнопка "Добавить"-->
                        <Button 
                                Classes="basket" 
                                Background="Green"
                                Name="Add"
                                Height="45"
                                Width="150"
                                Margin="160,0,0,0">
                                <TextBlock 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" 
                                        Foreground="White" 
                                        FontSize="20"
                                        Text="Добавить">
                                </TextBlock>
                        </Button>
                        <!--Кнопка "Корзина"-->
                        <Button 
                                Classes="basket"
                                Background="Green"
                                Name="Basket"
                                Height="45"
                                Width="150">
                                <TextBlock 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" 
                                        Foreground="White" 
                                        FontSize="20"
                                        Text="Корзина">
                                </TextBlock>
                        </Button>
                        <!--Кнопка "Редактировать"-->
                        <Button
                                Classes="basket" 
                                Background="Green" 
                                Name="Edit"
                                Height="45"
                                Width="210">
                                <TextBlock 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center" 
                                        Foreground="White" 
                                        FontSize="20"
                                        Text="Редактировать">
                                </TextBlock>
                        </Button>
                        <!--Кнопка "Назад"-->
                        <Button
                                Classes="basket" 
                                Background="Green"
                                Name="Back"
                                Height="45"
                                Width="150"
                                Margin="210,0,0,0">
                                <TextBlock 
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"
                                        Foreground="White"
                                        FontSize="20"
                                        Text="Назад">
                                </TextBlock>
                        </Button>
                </StackPanel>
                <!--Товары-->
                <ListBox
                        Margin="10"
                        Background="Transparent"
                        CornerRadius="10"
                        x:Name="Clothes" 
                        SelectionMode="Multiple,Toggle">
                        <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Center"/>
                                </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                                <DataTemplate>
                                        <Border Background="Azure"
                                                    Height="270"
                                                    Width="240"
                                                    CornerRadius="10">
                                                <StackPanel VerticalAlignment="Bottom">
                                                        <TextBlock
                                                                Text="{Binding Name}"
                                                                Foreground="Black"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Bottom"
                                                                Margin="0,0,0,9"
                                                                TextWrapping="Wrap"> <!--Path=Price-->
                                                        </TextBlock>
                                                        <TextBlock
                                                                Text="{Binding Price}"
                                                                Foreground="LimeGreen"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Bottom"
                                                                Margin="0,0,0,10"
                                                                TextWrapping="Wrap"
                                                                FontWeight="Heavy"> <!--Path=Price-->
                                                        </TextBlock>
                                                        <Panel>
                                                        <Border Background="Green"
                                                                Height="60"
                                                                Width="240"
                                                                Margin="0,0,0,0"
                                                                CornerRadius="10">
                                                        </Border>
                                                        <!--Кнопка "Удалить"-->
                                                        <Button 
                                                                Click="RemoveForm"
                                                                Tag="{Binding Idd}"
                                                                Classes="product"
                                                                Background="Green"
                                                                Name="Remove"
                                                                Height="50"
                                                                Width="90"
                                                                Margin="0,10,0,0"
                                                                CornerRadius="10">
                                                                <TextBlock 
                                                                        VerticalAlignment="Center"
                                                                        HorizontalAlignment="Center"
                                                                        Foreground="White" 
                                                                        FontSize="17"
                                                                        Text="Удалить">
                                                                </TextBlock>
                                                        </Button>
                                                        <Border Background="Green"
                                                                Height="10"
                                                                Width="240"
                                                                Margin="0,0,0,50"
                                                                CornerRadius="0">  
                                                        </Border>
                                                        </Panel>
                                                </StackPanel>
                                        </Border>
                                </DataTemplate>
                        </ListBox.ItemTemplate>
                </ListBox>
        </StackPanel>
</Window>