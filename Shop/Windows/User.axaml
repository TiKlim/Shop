<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Shop.User"
        Title="Window1"
        MaxHeight="800"
        MinHeight="800"
        MaxWidth="1280"
        MinWidth="1280"
        WindowStartupLocation="CenterScreen">
        <!--Фон-->
        <Window.Background>
                <ImageBrush Source="/Assets/view2.jpg"/>
        </Window.Background>
        <!---->
        <StackPanel>
                <!--Добро пожаловать-->
                <TextBlock Foreground="Ivory" 
                           FontWeight="Medium" 
                           Margin="30,20,0,0" 
                           FontSize="30">
                        Добро пожаловать!
                </TextBlock>
                <!--Кнопка "Главная"-->
                <Button Height="40" 
                        Width="130" 
                        Classes="menu" 
                        Margin="1110,-40,0,0" 
                        Name="Main">
                        <TextBlock Foreground="CornflowerBlue" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   FontSize="20">
                                Главная
                        </TextBlock>
                </Button>
                <!--Кнопка "Корзина"-->
                <Button Height="40" 
                        Width="230" 
                        Classes="buy" 
                        Margin="870,-40,0,0" 
                        Name="Basket">
                        <TextBlock VerticalAlignment="Center" 
                                   HorizontalAlignment="Center" 
                                   Foreground="CornflowerBlue" 
                                   FontSize="20">
                                Корзина
                        </TextBlock>
                </Button>
                <!--Карточка "Продукты"-->
                <Button Height="290" 
                        Background="White" 
                        CornerRadius="12" 
                        Margin="130,100,0,0" 
                        Name="Product">
                        <StackPanel>
                                <Image Source="/Assets/food.png" 
                                       Height="190" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"/>
                                <TextBlock Classes="food" 
                                           VerticalAlignment="Top" 
                                           HorizontalAlignment="Center" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Margin="0,20,0,0">
                                        Продукты
                                </TextBlock>
                        </StackPanel>
                </Button>
                <!--Карточка "Техника"-->
                <Button Height="290" 
                        Background="White" 
                        CornerRadius="12" 
                        Margin="530,-290,0,0" 
                        Name="Technic">
                        <StackPanel>
                                <Image Source="/Assets/tecnic.png" 
                                       Height="190" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"/>
                                <TextBlock VerticalAlignment="Top" 
                                           HorizontalAlignment="Center" 
                                           Foreground="DarkSlateGray" 
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Margin="0,20,0,0">
                                        Техника
                                </TextBlock>
                        </StackPanel>
                </Button>
                <!--Кнопка "Одежда"-->
                <Button Height="290" 
                        Background="White" 
                        CornerRadius="12"
                        Margin="930,-290,0,0" 
                        Name="Clothes">
                        <StackPanel>
                                <Image Source="/Assets/cloth.png" 
                                       Height="190" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Bottom"/>
                                <TextBlock VerticalAlignment="Top" 
                                           HorizontalAlignment="Center" 
                                           Foreground="SteelBlue"
                                           FontSize="32" 
                                           FontWeight="Bold" 
                                           Margin="0,20,0,0">
                                        Одежда
                                </TextBlock>
                        </StackPanel>
                </Button>
        </StackPanel>
</Window>